{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport CountBox from '@/components/CountBox.vue';\nimport { getProDetail, getProComments } from '@/api/product';\nimport defaultImg from '@/assets/default-avatar.png';\nimport { addCart } from '@/api/cart';\nexport default {\n  name: 'ProDetail',\n  components: {\n    CountBox\n  },\n  data() {\n    return {\n      images: ['https://img01.yzcdn.cn/vant/apple-1.jpg', 'https://img01.yzcdn.cn/vant/apple-2.jpg'],\n      current: 0,\n      detail: {},\n      total: '',\n      // 评论总数\n      commentList: [],\n      // 评论内容\n      defaultImg,\n      isshow: false,\n      // 激活商品页弹窗\n      mode: '',\n      addCount: 1,\n      // 购物车默认数量\n      cartTotal: 0 // 购物车总数量\n    };\n  },\n\n  async created() {\n    this.getDetail();\n    this.getComments();\n  },\n  methods: {\n    onChange(index) {\n      this.current = index;\n    },\n    async getDetail() {\n      const {\n        data: {\n          detail\n        }\n      } = await getProDetail(this.goodsId);\n      this.detail = detail;\n      this.images = detail.goods_images;\n      // console.log(detail)\n    },\n\n    async getComments() {\n      const {\n        data: {\n          list,\n          total\n        }\n      } = await getProComments(this.goodsId, 3);\n      this.total = total;\n      this.commentList = list;\n    },\n    cart() {\n      this.isshow = true;\n      this.mode = 'cart';\n    },\n    pay() {\n      this.isshow = true;\n      this.mode = 'pay';\n    },\n    async addCart() {\n      // 判断token是否存在\n\n      // 1.token不存在，弹出对话框\n      if (!this.$store.getters.token) {\n        // 弹确认框\n        this.$dialog.confirm({\n          title: '温馨提示',\n          message: '需要先登录才能继续操作哦',\n          confirmButtonText: '去登录',\n          cancelButtonText: '再逛逛'\n        }).then(() => {\n          // 如果希望，跳转登录后能跳回来，需要在跳转时携带参数（当前路径地址）\n          //  this.$route.fullpath(会包含查询参数)\n          // replace 不会保留跳转历史,因此想要在登录后,点击返回按钮跳转到上一级,而不是前一个页面时,就可以用replace.\n          this.$router.replace({\n            path: '/login',\n            query: {\n              backUrl: this.$route.fullPath\n            }\n          });\n        }).catch(() => {});\n      }\n\n      // 2.token存在，继续请求操作\n      const {\n        data: {\n          cartTotal\n        }\n      } = await addCart(this.goodsId, this.addCount, this.detail.skuList[0].goods_sku_id);\n      this.cartTotal = cartTotal;\n      this.$toast('加入购物车成功');\n      this.isshow = false;\n    },\n    goBuynow() {\n      this.$router.push({\n        pash: '/pay',\n        query: {\n          mode: 'buyNow',\n          goodsId: this.goodsId,\n          goodsSkuId: this.detail.skuList[0].goods_sku_id,\n          goodsNum: this.addCount\n        }\n      });\n    }\n  },\n  computed: {\n    goodsId() {\n      return this.$route.params.id;\n    }\n  }\n};","map":{"version":3,"names":["CountBox","getProDetail","getProComments","defaultImg","addCart","name","components","data","images","current","detail","total","commentList","isshow","mode","addCount","cartTotal","created","getDetail","getComments","methods","onChange","index","goodsId","goods_images","list","cart","pay","$store","getters","token","$dialog","confirm","title","message","confirmButtonText","cancelButtonText","then","$router","replace","path","query","backUrl","$route","fullPath","catch","skuList","goods_sku_id","$toast","goBuynow","push","pash","goodsSkuId","goodsNum","computed","params","id"],"sources":["src/views/prodetail/index.vue"],"sourcesContent":["<template>\r\n  <div class=\"prodetail\"  v-if=\"detail.goods_name\">\r\n    <van-nav-bar fixed title=\"商品详情页\" left-arrow @click-left=\"$router.go(-1)\" />\r\n\r\n    <van-swipe :autoplay=\"3000\" @change=\"onChange\">\r\n  <van-swipe-item v-for=\"(image, index) in images\" :key=\"index\">\r\n    <img v-lazy=\"image.external_url\" />\r\n  </van-swipe-item>\r\n\r\n  <template #indicator>\r\n    <div class=\"custom-indicator\">{{ current + 1 }} / {{ images.length }}</div>\r\n  </template>\r\n</van-swipe>\r\n\r\n    <!-- 商品说明 -->\r\n    <div class=\"info\">\r\n  <div class=\"title\">\r\n    <div class=\"price\">\r\n      <span class=\"now\">￥{{ detail.goods_price_min }}</span>\r\n      <span class=\"oldprice\">￥{{ detail.goods_price_max }}</span>\r\n    </div>\r\n    <div class=\"sellcount\">已售{{ detail.goods_sales }}件</div>\r\n  </div>\r\n  <div class=\"msg text-ellipsis-2\">\r\n    {{ detail.goods_name }}\r\n  </div>\r\n\r\n  <div class=\"service\">\r\n    <div class=\"left-words\">\r\n      <span><van-icon name=\"passed\" />七天无理由退货</span>\r\n      <span><van-icon name=\"passed\" />48小时发货</span>\r\n    </div>\r\n    <div class=\"right-icon\">\r\n      <van-icon name=\"arrow\" />\r\n    </div>\r\n  </div>\r\n</div>\r\n\r\n    <!-- 商品评价 -->\r\n    <div class=\"comment\">\r\n      <div class=\"comment-title\">\r\n        <div class=\"left\">商品评价 ({{  total }})</div>\r\n        <div class=\"right\">查看更多 <van-icon name=\"arrow\" /> </div>\r\n      </div>\r\n      <div class=\"comment-list\">\r\n        <div class=\"comment-item\" v-for=\"item in commentList\" :key=\"item.comment_id\">\r\n          <div class=\"top\">\r\n            <img :src=\"item.user.avatar_url || defaultImg\" alt=\"\">\r\n            <div class=\"name\">{{item.user.nick_name}}</div>\r\n            <van-rate :size=\"16\" :value=\"item.score / 2\" color=\"#ffd21e\" void-icon=\"star\" void-color=\"#eee\"/>\r\n          </div>\r\n          <div class=\"content\">\r\n           {{item.content}}\r\n          </div>\r\n          <div class=\"time\">\r\n            {{item.create_time}}\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- 商品描述 -->\r\n    <div class=\"desc\" v-html=\"detail.content\">\r\n    </div>\r\n\r\n    <!-- 底部 -->\r\n    <div class=\"footer\">\r\n      <div @click=\"$router.push('/')\" class=\"icon-home\">\r\n        <van-icon name=\"wap-home-o\" />\r\n        <span>首页</span>\r\n      </div>\r\n      <div @click=\"$router.push('/cart')\" class=\"icon-cart\">\r\n        <span v-if=\"cartTotal > 0\" class=\"num\">{{ cartTotal }}</span>\r\n        <van-icon name=\"shopping-cart-o\" />\r\n        <span>购物车</span>\r\n      </div>\r\n      <div @click=\"cart\" class=\"btn-add\">加入购物车</div>\r\n      <div @click=\"pay\" class=\"btn-buy\">立刻购买</div>\r\n    </div>\r\n\r\n    <!-- 购物车弹窗 -->\r\n    <van-action-sheet v-model=\"isshow\" :title=\"mode==='cart'?'添加购物车':'立即购买'\">\r\n      <div class=\"product\">\r\n    <div class=\"product-title\">\r\n      <div class=\"left\">\r\n        <img :src=\"detail.goods_image\r\n\" alt=\"\">\r\n      </div>\r\n      <div class=\"right\">\r\n        <div class=\"price\">\r\n          <span>¥</span>\r\n          <span class=\"nowprice\">{{detail. goods_price_min}}</span>\r\n        </div>\r\n        <div class=\"count\">\r\n          <span>库存</span>\r\n          <span>{{detail.stock_total }}</span>\r\n        </div>\r\n      </div>\r\n    </div>\r\n    <div class=\"num-box\">\r\n      <span>数量</span>\r\n      <CountBox v-model=\"addCount\"></CountBox>\r\n    </div>\r\n    <div class=\"showbtn\" v-if=\"detail.stock_total > 0\">\r\n      <div\r\n      @click=\"addCart\"\r\n      class=\"btn\"\r\n      v-if=\"mode==='cart'\">加入购物车</div>\r\n      <div\r\n      @click=\"goBuynow\"\r\n      class=\"btn now\" v-else>立刻购买</div>\r\n    </div>\r\n    <div class=\"btn-none\" v-else>该商品已抢完</div>\r\n  </div>\r\n    </van-action-sheet>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport CountBox from '@/components/CountBox.vue'\r\nimport { getProDetail, getProComments } from '@/api/product'\r\nimport defaultImg from '@/assets/default-avatar.png'\r\nimport { addCart } from '@/api/cart'\r\nexport default {\r\n  name: 'ProDetail',\r\n  components: {\r\n    CountBox\r\n  },\r\n  data () {\r\n    return {\r\n      images: [\r\n        'https://img01.yzcdn.cn/vant/apple-1.jpg',\r\n        'https://img01.yzcdn.cn/vant/apple-2.jpg'\r\n      ],\r\n      current: 0,\r\n      detail: {},\r\n      total: '', // 评论总数\r\n      commentList: [], // 评论内容\r\n      defaultImg,\r\n      isshow: false, // 激活商品页弹窗\r\n      mode: '',\r\n      addCount: 1, // 购物车默认数量\r\n      cartTotal: 0 // 购物车总数量\r\n    }\r\n  },\r\n  async created () {\r\n    this.getDetail()\r\n    this.getComments()\r\n  },\r\n  methods: {\r\n    onChange (index) {\r\n      this.current = index\r\n    },\r\n    async getDetail () {\r\n      const { data: { detail } } = await getProDetail(this.goodsId)\r\n      this.detail = detail\r\n      this.images = detail.goods_images\r\n      // console.log(detail)\r\n    },\r\n    async getComments () {\r\n      const { data: { list, total } } = await getProComments(this.goodsId, 3)\r\n      this.total = total\r\n      this.commentList = list\r\n    },\r\n    cart () {\r\n      this.isshow = true\r\n      this.mode = 'cart'\r\n    },\r\n    pay () {\r\n      this.isshow = true\r\n      this.mode = 'pay'\r\n    },\r\n    async addCart () {\r\n      // 判断token是否存在\r\n\r\n      // 1.token不存在，弹出对话框\r\n      if (!this.$store.getters.token) {\r\n        // 弹确认框\r\n        this.$dialog.confirm({\r\n          title: '温馨提示',\r\n          message: '需要先登录才能继续操作哦',\r\n          confirmButtonText: '去登录',\r\n          cancelButtonText: '再逛逛'\r\n        })\r\n          .then(() => {\r\n            // 如果希望，跳转登录后能跳回来，需要在跳转时携带参数（当前路径地址）\r\n            //  this.$route.fullpath(会包含查询参数)\r\n            // replace 不会保留跳转历史,因此想要在登录后,点击返回按钮跳转到上一级,而不是前一个页面时,就可以用replace.\r\n            this.$router.replace({\r\n              path: '/login',\r\n              query: {\r\n                backUrl: this.$route.fullPath\r\n              }\r\n            })\r\n          })\r\n          .catch(() => {\r\n\r\n          })\r\n      }\r\n\r\n      // 2.token存在，继续请求操作\r\n      const { data: { cartTotal } } = await addCart(this.goodsId, this.addCount, this.detail.skuList[0].goods_sku_id)\r\n      this.cartTotal = cartTotal\r\n      this.$toast('加入购物车成功')\r\n      this.isshow = false\r\n    },\r\n    goBuynow () {\r\n      this.$router.push({\r\n        pash: '/pay',\r\n        query: {\r\n          mode: 'buyNow',\r\n          goodsId: this.goodsId,\r\n          goodsSkuId: this.detail.skuList[0].goods_sku_id,\r\n          goodsNum: this.addCount\r\n        }\r\n      })\r\n    }\r\n  },\r\n  computed: {\r\n    goodsId () {\r\n      return this.$route.params.id\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style lang=\"less\" scoped>\r\n.prodetail {\r\n  padding-top: 46px;\r\n  ::v-deep .van-icon-arrow-left {\r\n    color: #333;\r\n  }\r\n  img {\r\n    display: block;\r\n    width: 100%;\r\n  }\r\n  .custom-indicator {\r\n    position: absolute;\r\n    right: 10px;\r\n    bottom: 10px;\r\n    padding: 5px 10px;\r\n    font-size: 12px;\r\n    background: rgba(0, 0, 0, 0.1);\r\n    border-radius: 15px;\r\n  }\r\n  .desc {\r\n    width: 100%;\r\n    overflow: scroll;\r\n    ::v-deep img {\r\n      display: block;\r\n      width: 100%!important;\r\n    }\r\n  }\r\n  .info {\r\n    padding: 10px;\r\n  }\r\n  .title {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    .now {\r\n      color: #fa2209;\r\n      font-size: 20px;\r\n    }\r\n    .oldprice {\r\n      color: #959595;\r\n      font-size: 16px;\r\n      text-decoration: line-through;\r\n      margin-left: 5px;\r\n    }\r\n    .sellcount {\r\n      color: #959595;\r\n      font-size: 16px;\r\n      position: relative;\r\n      top: 4px;\r\n    }\r\n  }\r\n  .msg {\r\n    font-size: 16px;\r\n    line-height: 24px;\r\n    margin-top: 5px;\r\n  }\r\n  .service {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    line-height: 40px;\r\n    margin-top: 10px;\r\n    font-size: 16px;\r\n    background-color: #fafafa;\r\n    .left-words {\r\n      span {\r\n        margin-right: 10px;\r\n      }\r\n      .van-icon {\r\n        margin-right: 4px;\r\n        color: #fa2209;\r\n      }\r\n    }\r\n  }\r\n\r\n  .comment {\r\n    padding: 10px;\r\n  }\r\n  .comment-title {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    .right {\r\n      color: #959595;\r\n    }\r\n  }\r\n\r\n  .comment-item {\r\n    font-size: 16px;\r\n    line-height: 30px;\r\n    .top {\r\n      height: 30px;\r\n      display: flex;\r\n      align-items: center;\r\n      margin-top: 20px;\r\n      img {\r\n        width: 20px;\r\n        height: 20px;\r\n      }\r\n      .name {\r\n        margin: 0 10px;\r\n      }\r\n    }\r\n    .time {\r\n      color: #999;\r\n    }\r\n  }\r\n\r\n  .footer {\r\n    position: fixed;\r\n    left: 0;\r\n    bottom: 0;\r\n    width: 100%;\r\n    height: 55px;\r\n    background-color: #fff;\r\n    border-top: 1px solid #ccc;\r\n    display: flex;\r\n    justify-content: space-evenly;\r\n    align-items: center;\r\n    .icon-home, .icon-cart {\r\n      display: flex;\r\n      flex-direction: column;\r\n      align-items: center;\r\n      justify-content: center;\r\n      font-size: 14px;\r\n      .van-icon {\r\n        font-size: 24px;\r\n      }\r\n    }\r\n    .btn-add,\r\n    .btn-buy {\r\n      height: 36px;\r\n      line-height: 36px;\r\n      width: 120px;\r\n      border-radius: 18px;\r\n      background-color: #ffa900;\r\n      text-align: center;\r\n      color: #fff;\r\n      font-size: 14px;\r\n    }\r\n    .btn-buy {\r\n      background-color: #fe5630;\r\n    }\r\n  }\r\n}\r\n\r\n.tips {\r\n  padding: 10px;\r\n}\r\n\r\n// 弹窗样式\r\n.product {\r\n  .product-title {\r\n    display: flex;\r\n    .left {\r\n      img {\r\n        width: 90px;\r\n        height: 90px;\r\n      }\r\n      margin: 10px;\r\n    }\r\n    .right {\r\n      flex: 1;\r\n      padding: 10px;\r\n      .price {\r\n        font-size: 14px;\r\n        color: #fe560a;\r\n        .nowprice {\r\n          font-size: 24px;\r\n          margin: 0 5px;\r\n        }\r\n      }\r\n    }\r\n  }\r\n\r\n  .num-box {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    padding: 10px;\r\n    align-items: center;\r\n  }\r\n\r\n  .btn, .btn-none {\r\n    height: 40px;\r\n    line-height: 40px;\r\n    margin: 20px;\r\n    border-radius: 20px;\r\n    text-align: center;\r\n    color: rgb(255, 255, 255);\r\n    background-color: rgb(255, 148, 2);\r\n  }\r\n  .btn.now {\r\n    background-color: #fe5630;\r\n  }\r\n  .btn-none {\r\n    background-color: #cccccc;\r\n  }\r\n}\r\n\r\n//购物车角标\r\n.footer .icon-cart {\r\n  position: relative;\r\n  padding: 0 6px;\r\n  .num {\r\n    z-index: 999;\r\n    position: absolute;\r\n    top: -2px;\r\n    right: 0;\r\n    min-width: 16px;\r\n    padding: 0 4px;\r\n    color: #fff;\r\n    text-align: center;\r\n    background-color: #ee0a24;\r\n    border-radius: 50%;\r\n  }\r\n}\r\n</style>\r\n"],"mappings":";AAuHA,OAAAA,QAAA;AACA,SAAAC,YAAA,EAAAC,cAAA;AACA,OAAAC,UAAA;AACA,SAAAC,OAAA;AACA;EACAC,IAAA;EACAC,UAAA;IACAN;EACA;EACAO,KAAA;IACA;MACAC,MAAA,GACA,2CACA,0CACA;MACAC,OAAA;MACAC,MAAA;MACAC,KAAA;MAAA;MACAC,WAAA;MAAA;MACAT,UAAA;MACAU,MAAA;MAAA;MACAC,IAAA;MACAC,QAAA;MAAA;MACAC,SAAA;IACA;EACA;;EACA,MAAAC,QAAA;IACA,KAAAC,SAAA;IACA,KAAAC,WAAA;EACA;EACAC,OAAA;IACAC,SAAAC,KAAA;MACA,KAAAb,OAAA,GAAAa,KAAA;IACA;IACA,MAAAJ,UAAA;MACA;QAAAX,IAAA;UAAAG;QAAA;MAAA,UAAAT,YAAA,MAAAsB,OAAA;MACA,KAAAb,MAAA,GAAAA,MAAA;MACA,KAAAF,MAAA,GAAAE,MAAA,CAAAc,YAAA;MACA;IACA;;IACA,MAAAL,YAAA;MACA;QAAAZ,IAAA;UAAAkB,IAAA;UAAAd;QAAA;MAAA,UAAAT,cAAA,MAAAqB,OAAA;MACA,KAAAZ,KAAA,GAAAA,KAAA;MACA,KAAAC,WAAA,GAAAa,IAAA;IACA;IACAC,KAAA;MACA,KAAAb,MAAA;MACA,KAAAC,IAAA;IACA;IACAa,IAAA;MACA,KAAAd,MAAA;MACA,KAAAC,IAAA;IACA;IACA,MAAAV,QAAA;MACA;;MAEA;MACA,UAAAwB,MAAA,CAAAC,OAAA,CAAAC,KAAA;QACA;QACA,KAAAC,OAAA,CAAAC,OAAA;UACAC,KAAA;UACAC,OAAA;UACAC,iBAAA;UACAC,gBAAA;QACA,GACAC,IAAA;UACA;UACA;UACA;UACA,KAAAC,OAAA,CAAAC,OAAA;YACAC,IAAA;YACAC,KAAA;cACAC,OAAA,OAAAC,MAAA,CAAAC;YACA;UACA;QACA,GACAC,KAAA,QAEA;MACA;;MAEA;MACA;QAAAtC,IAAA;UAAAS;QAAA;MAAA,UAAAZ,OAAA,MAAAmB,OAAA,OAAAR,QAAA,OAAAL,MAAA,CAAAoC,OAAA,IAAAC,YAAA;MACA,KAAA/B,SAAA,GAAAA,SAAA;MACA,KAAAgC,MAAA;MACA,KAAAnC,MAAA;IACA;IACAoC,SAAA;MACA,KAAAX,OAAA,CAAAY,I